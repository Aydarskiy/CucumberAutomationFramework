pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM',
                          branches: [[name: '*/master']],
                          userRemoteConfigs: [[url: 'https://github.com/Aydarskiy/CucumberAutomationFramework.git']]])
            }
        }


        stage('Build and Test') {
            steps {
                script {
                    // Assuming you have Maven installed and accessible in your PATH
                    bat 'mvn clean test'
                }
            }
        }



        stage('Generate Reports') {
            steps {
                script {
                    // Generate Cucumber report using Cucumber Reports Plugin if installed
                    cucumber buildStatus: 'UNSTABLE',
                                           reportTitle: 'My report',
                                           fileIncludePattern: '**/*.html',
                                           trendsLimit: 10,
                                           classifications: [
                                               [
                                                   'key': 'Browser',
                                                   'value': 'Chrome'
                                               ]
                                           ]
                }
            }
        }



    }

    post {
         success {
                    // Send email notification on success
                    emailext subject: 'Cucumber Report - Build Success',
                              body: 'Attached is the Cucumber report generated during the build.',
                              attachmentsPattern: 'target/cucumber-reports/*.json',
                              to: 'aydarzarif@gmail.com'
                }
                failure {
                    // Send email notification on failure
                    emailext subject: 'Cucumber Report - Build Failure',
                              body: 'The build failed. Please find attached the Cucumber report for troubleshooting.',
                              attachmentsPattern: 'target/cucumber-reports/*.json',
                              to: 'aydarzarif@gmail.com'
                }
        always {
            archiveArtifacts artifacts: 'target/cucumber-reports/*.json', allowEmptyArchive: true
            junit 'target/surefire-reports/*.xml'
        }
    }
}


