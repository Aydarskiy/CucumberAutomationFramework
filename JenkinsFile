pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM',
                          branches: [[name: '*/master']],
                          userRemoteConfigs: [[url: 'https://github.com/Aydarskiy/CucumberAutomationFramework.git']]])
            }
        }


        stage('Build and Test') {
            steps {
                script {
                    // Assuming you have Maven installed and accessible in your PATH
                    bat 'mvn clean test'
                }
            }
        }



      stage('Generate HTML report') {
              cucumber buildStatus: 'UNSTABLE',
                      reportTitle: 'My report',
                      fileIncludePattern: '**/*.html',
                      trendsLimit: 10,
                      classifications: [
                          [
                              'key': 'Browser',
                              'value': 'Chrome'
                          ]
                      ]
          }




    }

    post {
        always {
            archiveArtifacts artifacts: 'target/cucumber-reports/*.html', allowEmptyArchive: true
            junit 'target/surefire-reports/*.xml'
        }
    }
}


